<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:colorForeground">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="buttonStyle">@style/ButtonMainMenu</item>
        <item name="toolbarStyle">@style/ToolBar</item>
        <item name="android:itemTextAppearance">@style/CustomMenuTextApearance</item>
    </style>

    <style name="BrownTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/colorPrimaryBrown</item>
        <item name="android:colorForeground">@color/colorPrimaryBrown</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="buttonStyle">@style/ButtonMainMenuBrown</item>
        <item name="toolbarStyle">@style/ToolBarBrown</item>
    </style>

    <style name="RedTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/colorPrimaryRed</item>
        <item name="android:colorForeground">@color/colorPrimaryRed</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="buttonStyle">@style/ButtonMainMenuRed</item>
        <item name="toolbarStyle">@style/ToolBarRed</item>
    </style>

    <style name="ButtonMainMenu" parent="Base.Widget.AppCompat.Button">
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/rounded_button</item>
    </style>

    <style name="ButtonMainMenuBrown" parent="ButtonMainMenu">
        <item name="android:background">@drawable/rounded_button_brown</item>
    </style>

    <style name="ButtonMainMenuRed" parent="ButtonMainMenu">
        <item name="android:background">@drawable/rounded_button_red</item>
    </style>

    <style name="ToolBar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/colorAccent</item>
    </style>

    <style name="ToolBarBrown" parent="ToolBar">
        <item name="android:background">@color/colorAccentBrown</item>
    </style>

    <style name="ToolBarRed" parent="ToolBar">
        <item name="android:background">@color/colorAccentRed</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="CustomMenuTextApearance" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@color/colorCardText</item>
    </style>
</resources>
